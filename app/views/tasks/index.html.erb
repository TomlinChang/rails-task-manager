<h1>My tasks</h1>
<ul style = 'list-style-type:none'>
  <% @tasks.each do |task| %>
    <% if task.completed? %>
      <li>[x] <%= link_to task.title, task_path(task) %></li>
    <% else %>
      <li>[&nbsp;&nbsp;] <%= link_to task.title, task_path(task) %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Add a new task', tasks_new_path %>

